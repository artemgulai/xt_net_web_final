@using EPAM.VacancyPortal.PL.WebPL.Models;

@if (IsAjax)
{
    var type = Request["type"];

    switch (type)
    {
        case "editProfile":
            {
                EmployeeRequestHandler.Update(Request,Response);
                break;
            }
        case "deleteProfile":
            {
                EmployeeRequestHandler.Delete(Request,Response);
                FormsAuthentication.SignOut();
                break;
            }
        case "updateSkillLevel":
            {
                EmployeeRequestHandler.UpdateSkillLevel(Request,Response);
                break;
            }
        case "activateProfile":
            {
                EmployeeRequestHandler.Activate(Request,Response);
                break;
            }
            case "deactivateProfile":
            {
                EmployeeRequestHandler.Deactivate(Request,Response);
                break;
            }
        case "deleteSkill":
            {
                EmployeeRequestHandler.DeleteSkill(Request,Response);
                break;
            }
        case "response":
            {
                EmployeeRequestHandler.Response(Request,Response);
                break;
            }
    }
}