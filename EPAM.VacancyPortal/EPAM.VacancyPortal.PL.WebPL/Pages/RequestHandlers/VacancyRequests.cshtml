@using EPAM.VacancyPortal.PL.WebPL.Models;

@if(IsAjax)
{
    var type = Request["type"];

    switch(type)
    {
        case "deleteVacancy":
            {
                VacancyRequestHandler.DeleteById(Request, Response);
                break;
            }
        case "activateVacancy":
            {
                VacancyRequestHandler.Activate(Request, Response);
                break;
            }
        case "deactivateVacancy":
            {
                VacancyRequestHandler.Deactivate(Request, Response);
                break;
            }
        case "updateRequirementLevel":
            {
                VacancyRequestHandler.UpdateRequirementLevel(Request,Response);
                break;
            }
        case "deleteRequirement":
            {
                VacancyRequestHandler.DeleteRequirement(Request,Response);
                break;
            }
        case "response":
            {
                VacancyRequestHandler.Response(Request,Response);
                break;
            }
    }
}