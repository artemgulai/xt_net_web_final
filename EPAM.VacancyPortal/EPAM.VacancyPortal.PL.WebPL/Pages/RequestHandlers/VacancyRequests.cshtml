@if(IsAjax)
{
    var type = Request["type"];

    switch(type)
    {
        case "deleteVacancy":
            {
                EPAM.VacancyPortal.PL.WebPL.Models.VacancyRequestHandler.DeleteById(Request, Response);
                break;
            }
        case "activateVacancy":
            {
                EPAM.VacancyPortal.PL.WebPL.Models.VacancyRequestHandler.Activate(Request, Response);
                break;
            }
            case "deactivateVacancy":
            {
                EPAM.VacancyPortal.PL.WebPL.Models.VacancyRequestHandler.Deactivate(Request, Response);
                break;
            }
        case "updateRequirementLevel":
            {
                EPAM.VacancyPortal.PL.WebPL.Models.VacancyRequestHandler.UpdateRequirementLevel(Request,Response);
                break;
            }
        case "deleteRequirement":
            {
                EPAM.VacancyPortal.PL.WebPL.Models.VacancyRequestHandler.DeleteRequirement(Request,Response);
                break;
            }
    }
}