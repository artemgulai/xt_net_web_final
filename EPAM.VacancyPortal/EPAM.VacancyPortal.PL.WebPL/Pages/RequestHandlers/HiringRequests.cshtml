@using EPAM.VacancyPortal.PL.WebPL.Models;

@if (IsAjax)
{
    var type = Request["type"];

    switch (type)
    {
        case "acceptEmployee":
            {
                HiringRequestHandler.AcceptEmployee(Request,Response);
                break;
            }
        case "declineEmployee":
            {
                HiringRequestHandler.DeclineEmployee(Request,Response);
                break;
            }
        case "acceptVacancy":
            {
                HiringRequestHandler.AcceptVacancy(Request,Response);
                break;
            }
        case "declineVacancy":
            {
                HiringRequestHandler.DeclineVacancy(Request,Response);
                break;
            }
    }
}