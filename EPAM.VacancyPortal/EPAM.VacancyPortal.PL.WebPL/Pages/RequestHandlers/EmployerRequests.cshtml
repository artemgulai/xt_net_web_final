@using EPAM.VacancyPortal.PL.WebPL.Models;

@if (IsAjax)
{
    var type = Request["type"];

    switch (type)
    {
        case "editProfile":
            {
                EmployerRequestHandler.Update(Request,Response);
                break;
            }
        case "deleteEmployer":
            {
                EmployerRequestHandler.DeleteRequest(Request,Response);
                FormsAuthentication.SignOut();
                break;
            }
    }
}