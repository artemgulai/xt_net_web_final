@using EPAM.VacancyPortal.PL.WebPL.Models;

@if (IsAjax)
{
    string type = Request["type"];

    switch (type)
    {
        case "deleteAdmin":
            {
                int id = int.Parse(Request["id"]);
                AdminRequestHandler.Delete(id);
                break;
            }
        case "verifyAdmin":
            {
                int id = int.Parse(Request["id"]);
                AdminRequestHandler.Verify(id);
                break;
            }
        case "deleteEmployee":
            {
                EmployeeRequestHandler.Delete(Request,Response);
                break;
            }
            case "deleteEmployer":
            {
                EmployerRequestHandler.DeleteRequest(Request,Response);
                break;
            }
    }
}