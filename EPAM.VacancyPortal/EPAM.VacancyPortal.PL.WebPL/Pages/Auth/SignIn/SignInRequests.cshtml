@if (IsAjax)
{
    var result = EPAM.VacancyPortal.PL.WebPL.Models.AdminRequestHandler.SignIn(Request,Response);

    if (!result)
    {
        result = EPAM.VacancyPortal.PL.WebPL.Models.EmployerRequestHandler.SignIn(Request,Response);
    }
    if (!result)
    {
        result = EPAM.VacancyPortal.PL.WebPL.Models.EmployeeRequestHandler.SignIn(Request,Response);
    }

    if (result)
    {
        FormsAuthentication.SetAuthCookie(Request["login"],true);
    }
}