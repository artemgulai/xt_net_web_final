<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/mystyle.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <span class="navbar-brand">ITJob<img src="C:\Users\Artem/ Gulai\Untitled-1.png" alt="Alternate Text" /></span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @if (User.IsInRole("ADMIN"))
                {
                    @RenderPage("~/Pages/Partial/_AdminNav.cshtml")
                }

                @if (User.IsInRole("EMPLOYEE"))
                {
                    @RenderPage("~/Pages/Partial/_EmployeeNav.cshtml")
                }

                @if (User.IsInRole("EMPLOYER"))
                {
                    @RenderPage("~/Pages/Partial/_EmployerNav.cshtml")
                }

                @if (!User.Identity.IsAuthenticated)
                {
                    @RenderPage("~/Pages/Partial/_NotAuthNav.cshtml")
                }
            </ul>
        </div>
    </nav>

    @RenderBody()

    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
